  },
  "item": [
    {
      "name": "Planificaciones (CSV)",
      "item": [
        {
          "name": "GET ejemplos CSV",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/planificaciones/examples",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "planificaciones",
                "examples"
              ]
            }
          },
          "response": []
        },
        {
          "name": "POST previsualizar CSV (subir archivo)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/planificaciones/preview",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "planificaciones",
                "preview"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Cooperativas",
      "item": [
        {
          "name": "POST crear cooperativa",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generar RUC aleatorio de 13 dígitos para evitar conflictos únicos",
                  "const ruc = String(Math.floor(1e12 + Math.random()*9e12));",
                  "pm.variables.set('ruc', ruc);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 201', function () { pm.response.to.have.status(201); });",
                  "const json = pm.response.json();",
                  "pm.collectionVariables.set('coopId', json.id);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Cooperativa Demo\",\n  \"ruc\": \"{{ruc}}\",\n  \"logoUrl\": null,\n  \"activo\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cooperativas",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cooperativas"
              ]
            }
          },
          "response": []
        },
        {
          "name": "GET listar cooperativas",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cooperativas?search=&page=0&size=20",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cooperativas"
              ],
              "query": [
                { "key": "search", "value": "" },
                { "key": "page", "value": "0" },
                { "key": "size", "value": "20" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "GET cooperativa por id",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cooperativas/{{coopId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cooperativas",
                "{{coopId}}"
              ]
            }
          },
          "response": []
        },
        {
          "name": "PUT actualizar cooperativa",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Cooperativa Demo Actualizada\",\n  \"ruc\": \"{{ruc}}\",\n  \"logoUrl\": null,\n  \"activo\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cooperativas/{{coopId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cooperativas",
                "{{coopId}}"
              ]
            }
          },
          "response": []
        },
        {
          "name": "DELETE cooperativa",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status 204', function () { pm.response.to.have.status(204); });"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cooperativas/{{coopId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "cooperativas",
                "{{coopId}}"
              ]
            }
          },
          "response": []
