        {
          "name": "POST /reservas (guarda reservaId)",
          "event": [
            {
              "listen": "test",
              "script": { "type": "text/javascript", "exec": [
                "pm.test('201 Created', function(){ pm.response.to.have.status(201); });",
                "const j = pm.response.json(); pm.collectionVariables.set('reservaId', j.id);"
              ]}
            }
          ],
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"viajeId\": {{viajeId}},\n  \"asientos\": [\n    \"2A\", \"2B\"\n  ]\n}" },
