{
  "info": {
    "name": "Backend Smartcode - Operación, Rutas, Usuarios, Ventas y Embarque",
    "description": "Colección Postman para probar módulos de operación, rutas, usuarios, ventas y embarque usando el backend en local. Usa environment Local. Variables utilizadas: baseUrl, viajeId, reservaId, boletoCodigo.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth y Usuarios (stub)",
      "item": [
        {
          "name": "POST /auth/login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"demo\"\n}" },
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth","login"] }
          },
          "response": []
        },
        {
          "name": "POST /auth/register",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{\n  \"email\": \"cliente+demo@example.com\",\n  \"password\": \"demo\",\n  \"nombres\": \"Cliente\",\n  \"apellidos\": \"Demo\"\n}" },
            "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth","register"] }
          },
          "response": []
        },
        {
          "name": "GET /users/me",
          "request": {
            "method": "GET",
            "header": [ { "key": "X-Demo-Token", "value": "demo-token-admin" } ],
            "url": { "raw": "{{baseUrl}}/users/me", "host": ["{{baseUrl}}"], "path": ["users","me"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Rutas y Viajes (stub)",
      "item": [
        {
          "name": "GET /rutas/buscar",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/rutas/buscar?origen=Quito&destino=Loja&fecha=2025-12-01&tipoViaje=directo",
              "host": ["{{baseUrl}}"],
              "path": ["rutas","buscar"],
              "query": [
                {"key":"origen","value":"Quito"},
                {"key":"destino","value":"Loja"},
                {"key":"fecha","value":"2025-12-01"},
                {"key":"tipoViaje","value":"directo"}
              ]
            }
          },
          "response": []
        },
        {
          "name": "GET /viajes?fecha=YYYY-MM-DD (guarda viajeId)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const j = pm.response.json();",
                  "if (j.items && j.items.length) { pm.collectionVariables.set('viajeId', j.items[0].id); }"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/viajes?fecha=2025-12-01",
              "host": ["{{baseUrl}}"],
              "path": ["viajes"],
              "query": [{"key":"fecha","value":"2025-12-01"}]
            }
          },
          "response": []
        },
        {
          "name": "GET /viajes/{{viajeId}}/disponibilidad",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/viajes/{{viajeId}}/disponibilidad", "host": ["{{baseUrl}}"], "path": ["viajes","{{viajeId}}","disponibilidad"] }
          },
          "response": []
        },
        {
          "name": "GET /viajes/{{viajeId}}/bus",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/viajes/{{viajeId}}/bus", "host": ["{{baseUrl}}"], "path": ["viajes","{{viajeId}}","bus"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Ventas (stubs)",
